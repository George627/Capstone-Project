<%- include("partials/header.ejs") %>

<%# A div that formats the form on the webpage. %>
<div class="format">

<%# A form that submits the username given by the user. If they are a Guest, comments will not be saved. %>
<form action="/signin" method="POST"class="mx-auto mt-5" style="width: 450px;">
  <h1 class="h3 mb-3 fw-normal">Please enter your username:</h1>

  <div class="form-floating">
    <input type="username" class="form-control" id="floatingInput" name="username">
    <label for="floatingInput">Username</label>
  </div>

  <button class="btn btn-primary w-100 py-2 mt-3" type="submit">Sign in</button>
</form>
</div>

